    <script>
        document.getElementById('reservaForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const formData = {
                nome: document.getElementById('nome').value,
                email: document.getElementById('email').value,
                telefone: document.getElementById('telefone').value,
                cep: document.getElementById('cep').value,
                endereco: document.getElementById('endereco').value,
                numero: document.getElementById('numero').value,
                bairro: document.getElementById('bairro').value,
                cidade: document.getElementById('cidade').value,
                estado: document.getElementById('estado').value,
                observacoes: document.getElementById('observacoes').value
            };

            try {
                const response = await fetch('https://n8neditor.typebotdami.uk/webhook-test/83776e52-e682-456d-a886-7462c3534c5e', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                if (response.ok) {
                    document.getElementById('reservaForm').style.display = 'none';
                    document.getElementById('successMessage').classList.add('show');
                    window.scrollTo({
                        top: document.getElementById('successMessage').offsetTop - 100,
                        behavior: 'smooth'
                    });
                } else {
                    alert('Ocorreu um erro ao enviar sua reserva. Por favor, tente novamente.');
                }
            } catch (error) {
                alert('Ocorreu um erro ao enviar sua reserva. Por favor, tente novamente.');
            }
        });
    </script>
